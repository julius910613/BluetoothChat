<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:gravity="center"
        android:text="case history"
        android:textSize="25sp" />

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="278dp"
        android:stretchColumns="1" >

        <View
            android:layout_height="2dip"
            android:background="#FF909090" />

        <TextView
            android:gravity="center_vertical|left"
            android:text="Personal Information" />

        <View
            android:layout_height="2dip"
            android:background="#FF909090" />

        <TableRow>

            <TextView
                android:layout_column="1"
                android:padding="3dip"
                android:text="Name" />

            <TextView
                android:id="@+id/result_name"
                android:gravity="right"
                android:padding="3dip" />
        </TableRow>
        <TableRow>

            <TextView
                android:layout_column="1"
                android:padding="3dip"
                android:text="Blood Type" />

            <TextView
                android:id="@+id/result_bloodtype"
                android:gravity="right"
                android:padding="3dip" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_column="1"
                android:padding="3dip"
                android:text="Date of Birth" />

            <TextView
                android:id="@+id/result_dateofbirth"
                android:gravity="right"
                android:padding="3dip" />
        </TableRow>

        <View
            android:layout_height="2dip"
            android:background="#FF909090" />

        <TextView
            android:gravity="center_vertical|left"
            android:text="Health Information" />

        <View
            android:layout_height="2dip"
            android:background="#FF909090" />

        <TableRow>

            <TextView
                android:layout_column="1"
                android:padding="3dip"
                android:text="Blood Pressure" />

            <TextView
                android:id="@+id/result_bloodpressure"
                android:gravity="right"
                android:padding="3dip" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_column="1"
                android:padding="3dip"
                android:text="X-Ray" />

            <TextView
                android:id="@+id/result_xray"
                android:gravity="right"
                android:padding="3dip" />
        </TableRow>
        
        <TableRow>

            <TextView
                android:layout_column="1"
                android:padding="3dip"
                android:text="Sight" />

            <TextView
                android:id="@+id/result_sight"
                android:gravity="right"
                android:padding="3dip" />
        </TableRow>
        
        <TableRow>

            <TextView
                android:layout_column="1"
                android:padding="3dip"
                android:text="Hearing" />

            <TextView
                android:id="@+id/result_hearing"
                android:gravity="right"
                android:padding="3dip" />
        </TableRow>
        
        <TableRow>

            <TextView
                android:layout_column="1"
                android:padding="3dip"
                android:text="Heart Beat" />

            <TextView
                android:id="@+id/result_heartbeat"
                android:gravity="right"
                android:padding="3dip" />
        </TableRow>
        <TableRow>

            <TextView
                android:layout_column="1"
                android:padding="3dip"
                android:text="Hold?" />

            <TextView
                android:id="@+id/result_hold"
                android:gravity="right"
                android:padding="3dip" />
        </TableRow>

        <View
            android:layout_height="2dip"
            android:background="#FF909090" />

        <TextView
            android:gravity="center_vertical|left"
            android:text="Doctor&apos;s comment" />

        <View
            android:layout_height="2dip"
            android:background="#FF909090" />
    </TableLayout>

    <LinearLayout
        android:id="@+id/layout_liner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/result_backBT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:text="back" />

        <Button
            android:id="@+id/personinfo_update_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:text="Update" />

        <Button
            android:id="@+id/personalInfo_deleteBT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:text="delete" />
    </LinearLayout>

</LinearLayout>