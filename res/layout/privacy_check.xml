<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="12" >
    
     <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:gravity="center"
        android:text="case history"
        android:textSize="25sp" />

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="278dp"
        android:stretchColumns="1"
        android:weightSum="9" >

        <View
            android:layout_height="2dip"
            android:background="#FF909090" />

        <TextView
            android:gravity="center_vertical|left"
            android:text="Personal Information" />

        <View
            android:layout_height="2dip"
            android:background="#FF909090" />

        <TableRow>

            <TextView
                android:layout_column="1"
                android:padding="3dip"
                android:text="Name" />

            <TextView
                android:id="@+id/privacycheck_name"
                android:gravity="right"
                android:padding="3dip" />
        </TableRow>
        <TableRow>

            <TextView
                android:layout_column="1"
                android:padding="3dip"
                android:text="Blood Type" />

            <TextView
                android:id="@+id/privacycheck_bloodtype"
                android:gravity="right"
                android:padding="3dip" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_column="1"
                android:padding="3dip"
                android:text="Date of Birth" />

            <TextView
                android:id="@+id/privacycheck_dateofbirth"
                android:gravity="right"
                android:padding="3dip" />
        </TableRow>

        <View
            android:layout_height="2dip"
            android:background="#FF909090" />

        <TextView
            android:gravity="center_vertical|left"
            android:text="Health Information" />

        <View
            android:layout_height="2dip"
            android:background="#FF909090" />

        <TableRow>

            <TextView
                android:layout_column="1"
                android:padding="3dip"
                android:text="Blood Pressure" />

            <TextView
                android:id="@+id/privacycheck_bloodpressure"
                android:gravity="right"
                android:padding="3dip" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_column="1"
                android:padding="3dip"
                android:text="X-Ray" />

            <TextView
                android:id="@+id/privacycheck_xray"
                android:gravity="right"
                android:padding="3dip" />
        </TableRow>
        
        <TableRow>

            <TextView
                android:layout_column="1"
                android:padding="3dip"
                android:text="Sight" />

            <TextView
                android:id="@+id/privacycheck_sight"
                android:gravity="right"
                android:padding="3dip" />
        </TableRow>
        
        <TableRow>

            <TextView
                android:layout_column="1"
                android:padding="3dip"
                android:text="Hearing" />

            <TextView
                android:id="@+id/privacycheck_hearing"
                android:gravity="right"
                android:padding="3dip" />
        </TableRow>
        
        <TableRow>

            <TextView
                android:layout_column="1"
                android:padding="3dip"
                android:text="Heart Beat" />

            <TextView
                android:id="@+id/privacycheck_heartbeat"
                android:gravity="right"
                android:padding="3dip" />
        </TableRow>
        <TableRow>

            <TextView
                android:layout_column="1"
                android:padding="3dip"
                android:text="Hold?" />

            <TextView
                android:id="@+id/privacycheck_hold"
                android:gravity="right"
                android:padding="3dip" />
        </TableRow>
        <TableRow>

            <TextView
                android:layout_column="1"
                android:padding="3dip"
                android:text="storesec" />

            <TextView
                android:id="@+id/privacycheck_storenum"
                android:gravity="right"
                android:padding="3dip" />
        </TableRow>

        <View
            android:layout_height="2dip"
            android:background="#FF909090" />

        <TextView
            android:gravity="center_vertical|left"
            android:text="Doctor&apos;s comment" />

        <View
            android:layout_height="2dip"
            android:background="#FF909090" />
    </TableLayout>

    <LinearLayout
        android:id="@+id/layout_liner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3" >

        <Button
            android:id="@+id/privacycheck_cancelbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:text="cencel" />
         <Button
            android:id="@+id/privacycheck_upgradebutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:text="upgrade" />

        

        <Button
            android:id="@+id/privacycheck_sendbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:text="send" />
    </LinearLayout>
    

</LinearLayout>